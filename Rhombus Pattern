#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n;
    cin>>n;
    
    for(int i=1; i<=n; i++){
        
        int j= 1;
        for(; j<=n-i; j++)    //for LHS space
        cout<<"  ";
        
        
        for(int k=1; k<=n; k++)
        cout<<"* ";
        
        // for(; j<=n-1; j++)   //for RHS space NOT NEEDED
        // cout<<"  ";
        
        cout<<endl;
       
    }
   
   return 0;
   
    
}
