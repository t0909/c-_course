#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n;
    cin>>n;
    
    for(int i=1; i<=n; i++){
        
        for(int j=1; j<=n-i; j++)
        cout<<"  ";
        
        int count=i;
        for(int k=1; k<=i; k++)
        {
            cout<<count--<<" ";
        }
        
        count=2;
        for(int k=1; k<i; k++)
        {
            cout<<count++<<" ";
        }
        
        
        cout<<endl;
       
    }
   
   return 0;
   
    
}
