#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n;
    cin>>n;
    int count=1;
    for(int i=1; i<=n; i++){
        
        for(int j=1; j<=n-i; j++) // for spaces
        cout<<" ";
        
        for(int k=1; k<=i; k++)
        {
            cout<<count++<<" ";
        }
        
        count =1;
        cout<<endl;
       
    }
   
   return 0;
   
    
}
